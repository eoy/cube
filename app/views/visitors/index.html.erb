<script type="text/javascript">
  $(document).ready(function(){
    window.step = 1;
    var $input = $('input')
    var setStep = function(step) {
      switch(step) {
        case 1:
          if ($input.val() == "kent" || $input.val() == "Kent") {
            window.step = step + 1;
            $('.side-7').addClass('active');
            $input.val('');
            $input.blur();
            $('.serif').fadeOut('fast', function(){
              $('.serif').html("By now you must have noticed,<br>you're living with a geek.<br>We adventure, we snuggle,<br>we stay up all night playing __________<br>What we have is something unique.").fadeIn('slow');
            });
          }
          break;
        case 2:
          if ($input.val() == "twilight struggle" || $input.val() == "Twilight Struggle") {
            window.step = step + 1;
            $('.side-6').addClass('active');
            $input.val('');
            $input.blur();
            $('.serif').fadeOut('fast', function(){
              $('.serif').html("My sun and stars, my own little deus,<br>do you remember our night in __________?<br>I knew already then that you are the one,<br>and that our adventures had only just begun.").fadeIn('slow');
            });
          }
          break;
        case 3:
          if ($input.val() == "Sao Mateus" || $input.val() == "sao mateus" || $input.val() == "São Mateus" || $input.val() == "são mateus") {
            window.step = step + 1;
            $('.side-7').removeClass('active').addClass('active-2');
            $input.val('');
            $input.blur();
            $('.serif').fadeOut('fast', function(){
              $('.serif').html("Our lives are about to change,<br>you'll soon be a mother.<br>But don't fret, it will be easy<br>as long as we have __________.").fadeIn('slow');
            });
          }
          break;
        case 4:
          if ($input.val() == "each other" || $input.val() == "eachother" || $input.val() == "Each other" || $input.val() == "Eachother") {
            window.step = step + 1;
            $('.side-6').removeClass('active').addClass('active-2');
            $input.val('');
            $input.blur();
            $('.serif').fadeOut('fast', function(){
              $('.serif').html("That love could be this fantastic,<br>I never really knew.<br>Or that there was someone,<br>as amazing as you.<br><br>Now the world's best person with a round belly,<br>is the girl I first met at _________.").fadeIn('slow');
            });
          }
          break;
        case 5:
          if ($input.val() == "Teerenpeli" || $input.val() == "teerenpeli") {
            window.step = step + 1;
            $('.side-4').addClass('active');
            $input.val('');
            $input.blur();
            $('.serif').fadeOut('fast', function(){
              $('.serif').html("What are these glyphs?<bR>Oh the suspense!<br>Don't worry my love,<br>it will soon all make sense.<br>Jag älskar dig, aishiteru,<br>rakastan sinua, __________!").fadeIn('slow');
            });
          }
          break;
        case 6:
          if ($input.val() == "i love you" || $input.val() == "I love you") {
            window.step = step + 1;
            $('.side-5').addClass('active');
            $('.form-container').fadeOut('slow');
            $('#cube').addClass('red');
          }
          break;
      }
    }

    $('input').on('keyup', function(e){
      value = $('input').val();
      setStep(window.step, value);
    });
  });
</script>