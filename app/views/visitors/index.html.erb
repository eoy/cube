<script type="text/javascript">
  $(document).ready(function(){
    window.step = 1;
    var $input = $('input')
    var setStep = function(step) {
      switch(step) {
        case 1:
          if ($input.val() == "kent" || $input.val() == "Kent") {
            window.step = step + 1;
            $('.side-7').addClass('active');
            $input.val('');
            $input.blur();
            $('.serif').fadeOut('fast', function(){
              $('.serif').html("By now you must have noticed,<br>you're living with a geek.<br>We adventure, we snuggle,<br>and yet we stay up all night playing __________<br>What we have is something unique.").fadeIn('slow');
            });
          }
          break;
        case 2:
          if ($input.val() == "twilight struggle" || $input.val() == "Twilight Struggle") {
            window.step = step + 1;
            $('.side-6').addClass('active');
            $input.val('');
            $input.blur();
            $('.serif').fadeOut('fast', function(){
              $('.serif').html("Step 3").fadeIn('slow');
            });
          }
          break;
        case 3:
          if ($input.val() == "cock") {
            window.step = step + 1;
            $('.side-7').removeClass('active').addClass('active-2');
          }
          break;
        case 4:
          if ($input.val() == "balls") {
            window.step = step + 1;
            $('.side-6').removeClass('active').addClass('active-2');
          }
          break;
        case 5:
          if ($input.val() == "pussy") {
            window.step = step + 1;
            $('.side-4').addClass('active');
          }
          break;
        case 6:
          if ($input.val() == "galore") {
            window.step = step + 1;
            $('.side-5').addClass('active');
            $('.form-container').fadeOut('slow');
          }
          break;
      }
    }

    $('input').on('keyup', function(e){
      value = $('input').val();
      setStep(window.step, value);
    });
  });
</script>